@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Cadastros.Web.Models.Contato

@{
    ViewData["Title"] = "Remover Contato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCompleto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeCompleto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.NomeCompleto)
        </dd>
    </dl>
    <h6>Deseja realmente remover este Contato?</h6>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" value="Remover" class="btn btn-danger">
            <i class="fa-solid fa-trash"></i> Remover
        </button>
        <a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Retornar</a>
    </form>
</div>
